<h2>Log in</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name),class: "form-horizontal") do |f| %>
  <div class="form-group">
    <%= f.label :email ,class: "control-label col-sm-2" %><br />
    <div class="col-sm-10">
      <%= f.email_field :email, class: "form-control",autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password,class: "control-label col-sm-2" %><br />
    <div class="col-sm-10">
      <%= f.password_field :password, class: "form-control", autocomplete: "off" %> <br />
    </div>
  </div>

  <div class="form-group actions">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Log in",class: "btn btn-default" %>
    </div>
  </div>
<% end %>


