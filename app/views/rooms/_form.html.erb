<%= form_for(room) do |f| %>
  <% if room.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:</h2>

      <ul>
      <% room.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :number %>
    <%= f.text_field :number %>
  </div>

  <div class="field">
    <%= f.label :room_type %>
    <%= f.select(:room_type, options_for_room_type) %>
  </div>

  <div class="field">
    <%= f.label :specification %>
    <%= f.select(:specification, options_for_spec) %>
  </div>

  <div class="field">
    <%= f.label :charges %> (Per Night)
    <%= f.text_field :charges %>
  </div>

  <div class="field">
    <%= f.label :status %>
    <%= f.select(:status, options_for_status) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
